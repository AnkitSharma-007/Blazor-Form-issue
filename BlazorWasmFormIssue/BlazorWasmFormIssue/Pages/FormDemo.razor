@page "/formdemo"
@inherits FormDemoBase

<h1>FormDemo</h1>

<div class="row">
    <div class="col-md-6">
        <EditForm EditContext="@editFormContext" OnSubmit="@HandleEditContextFormSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary style="@showValidationSummary" />

            <div class="form-group row">
                <label class="control-label col-md-12">First Name</label>
                <div class="col">
                    <InputText class="form-control" @bind-Value="editContextuser.Name" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-12">Age</label>
                <div class="col">
                    <InputNumber class="form-control" @bind-Value="editContextuser.Age" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-12">User Name</label>
                <div class="col">
                    <InputText class="form-control" @bind-Value="editContextuser.UserName" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success" disabled="@isFormInvalid">Submit</button>
            </div>
        </EditForm>
    </div>
</div>
